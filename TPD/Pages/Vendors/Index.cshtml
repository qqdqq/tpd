<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Vendor[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Vendor[0].Description)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Vendor[0].Location)
            </th>
            <th>
